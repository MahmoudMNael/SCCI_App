<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Base.Theme.SCCIApp" parent="Theme.Material3.Light.NoActionBar">
		<!-- Customize your light theme here. -->
		<item name="colorPrimary">@color/Primary</item>
		<item name="colorSecondary">@color/Secondary</item>
		<item name="colorTertiary">@color/Tertiary</item>
		<item name="android:statusBarColor">#00000000</item>
		<item name="android:windowLightStatusBar">true</item>
	</style>
	
	<style name="AuthCard.SCCIApp" parent="@style/Widget.Material3.CardView.Elevated">
		<item name="shapeAppearanceOverlay">@style/AuthCard.ShapeAppearanceOverlay.SCCIApp</item>
	</style>
	
	<style name="AuthCard.ShapeAppearanceOverlay.SCCIApp" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSizeTopRight">24dp</item>
		<item name="cornerSizeTopLeft">24dp</item>
		<item name="cornerSizeBottomRight">0dp</item>
		<item name="cornerSizeBottomLeft">0dp</item>
	</style>
	
	<style name="Custom.Indicator.SCCIApp" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
		<item name="android:color">@color/Primary</item>
	</style>
	
	<style name="Theme.SCCIApp" parent="Base.Theme.SCCIApp" />
</resources>